<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" spacing="10.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.demo6.HelloController" stylesheets="@styles.css" styleClass="vbox">
  <padding>
    <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
  </padding>
  <Label fx:id="welcomeText" text="To-Do List" styleClass="label"/>
  <TextField fx:id="taskInput" promptText="Enter new task" styleClass="text-field"/>
  <Button fx:id="addButton" text="Add Task" onAction="#onAddTask" styleClass="button"/>
  <Button text="Clear Completed" onAction="#onClearCompleted" styleClass="button"/>
  <ListView fx:id="taskList" prefHeight="150.0" prefWidth="300.0" styleClass="list-view"/>
</VBox>
